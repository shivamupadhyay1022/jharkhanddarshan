<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".news_desc">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:id="@+id/news_desc_image"
        android:layout_marginTop="40sp"
        android:layout_marginRight="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15sp"
        android:id="@+id/news_desc_headline"
        android:text="Headline"
        android:textSize="25sp"
        android:layout_below="@id/news_desc_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_desc_headline"
        android:id="@+id/news_desc_text"
        android:text="article"
        android:textSize="15sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="40sp"
        android:layout_marginBottom="40sp"
        android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_desc_text"
            android:layout_centerHorizontal="true"
            android:src="@drawable/screenshot_42" />

    </RelativeLayout>

</ScrollView>